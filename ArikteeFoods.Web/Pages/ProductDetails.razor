@page "/Product/{Id:int}"
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]

@if (FoodProduct is null)
{
    <LoadingSpinner />
}
else
{
    <h3 class="mb-5">Product Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@FoodProduct.ProductImageUrl" alt="FoodProduct Image" />
        </div>
        <div class="col-md-6">
            <h4 class="mb-4">@FoodProduct.ProductName</h4>
            <p class="mb-4">@FoodProduct.ProductDescription</p>
            <p>
                <b>₦@FoodProduct.ProductPrice</b>
            </p>
            <button class="btn btn-success">
                <i class="fa-solid fa-plus"></i>
                Add To Cart
            </button>
        </div>
    </div>
}

